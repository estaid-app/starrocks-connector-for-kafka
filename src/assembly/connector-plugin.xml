<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>plugin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>starrocks-kafka-connector</baseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.apache.kafka:kafka-clients</exclude>
                <exclude>org.apache.kafka:connect-api</exclude>
                <exclude>org.apache.kafka:connect-transforms</exclude>
                <exclude>org.apache.kafka:connect-json</exclude>

                <exclude>com.fasterxml.jackson.core:jackson-*</exclude>
                <exclude>com.fasterxml.jackson.dataformat:jackson-*</exclude>
                <exclude>com.fasterxml.jackson.datatype:jackson-*</exclude>

                <exclude>org.slf4j:slf4j-api</exclude>

                <exclude>com.starrocks:starrocks-stream-load-sdk</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>README.md</source>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
